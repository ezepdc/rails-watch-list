<div class="container">
  <div class="banner mb-4 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h1>Your lists</h1>
    </div>
  </div>



  <div class="cards">
    <% @lists.each do |list| %>
      <%= link_to list_path(list), class:"text-decoration-none" do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : asset_path('list_background.jpg') %>)">
          <%= list.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
