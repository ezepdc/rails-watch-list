<div class="container">
  <div class="position-relative">
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('list-background.jpg') %>)">
    <h1>Add a new bookmark</h1>
    </div>
  </div>
  <br>


  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :comment, placeholder: 'Enter a comment about the movie' %>
        <%= f.association :movie, prompt: "Select a movie", input_html: {data: { controller: "tom-select"}} %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
